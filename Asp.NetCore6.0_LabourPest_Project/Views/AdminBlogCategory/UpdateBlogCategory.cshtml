@model BlogCategory
@{
    ViewData["Title"] = "UpdateBlogCategory";
    Layout = "~/Views/Shared/_AdminDashboard.cshtml";
}


<h2 class="mb-4">BLOG GÜNCELLEME SAYFASI</h2>
<div class="row">
    <div class="col-xl-9">
        <form class="row g-3 mb-6" method="post">
            @Html.HiddenFor(x =>x.BlogCategoryID)
            <div class="col-sm-6 col-md-8">
                <div class="form-floating"><input class="form-control" name="BlogCategories" id="floatingInputGrid" type="text" placeholder="BLOG KATEGORİSİ" /><label for="floatingInputGrid">BLOG KATEGORİSİ</label></div>
            </div>

            <div class="col-12 gy-6">
                <div class="row g-3 justify-content">
                    
                    <div class="col-auto"><button class="btn btn-info px-5 px-sm-15">Blog Kategorisi Güncelle</button></div>
                </div>
            </div>
        </form>
    </div>
</div>


