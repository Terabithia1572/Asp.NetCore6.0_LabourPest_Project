@model List<Product>

<section class="ls s-pt-xl-140 s-pt-lg-120 s-pt-md-80 s-pt-50 s-pb-xl-145 s-pb-lg-125 s-pb-md-85 s-pb-55  text-center text-sm-left">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<h6 class="special-heading sub-title text-center"><span>Kendi Ürünlerimiz</span></h6>
				<h2 class="special-heading text-center">Popüler Ürünler</h2>
				<div class="divider-50 hidden-below-md"></div>
				<div class="divider-30 hidden-above-md"></div>
			</div>
		</div>
		<div class="row c-mb-50 c-gutter-40">
			@foreach (var item in Model)
			{
				<div class="col-lg-4 col-md-6">
					<div class="icon-box text-center">
						<div class="icon-styled fs-60 color-main2">
							<i class="icon-fonts @item.ProductImageURL"></i>
						</div>
						<h6 class="text-uppercase">
							<a href="shop-right.html">@item.ProductName</a>
						</h6>
						<p>
							@item.ProductDescription
						</p>
					</div>
				</div>
			}
			

		</div>
		<div class="mt--50"></div>
	</div>
</section>