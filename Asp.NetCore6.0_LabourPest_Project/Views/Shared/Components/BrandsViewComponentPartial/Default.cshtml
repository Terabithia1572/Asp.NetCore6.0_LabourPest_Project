@model List<Brands>

<section id="brands" class="ls container-px-0 s-py-70">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 text-center">
                <div class="owl-carousel widget widget_partners_carousel"
                     id="partners-carousel"
                     data-center="false"
                     data-margin="20"
                     data-loop="true"
                     data-autoplay="true"
                     data-autoplay-timeout="2000"
                     data-responsive-lg="6"
                     data-responsive-md="4"
                     data-responsive-sm="3"
                     data-responsive-xs="2">
                    @foreach (var item in Model)
                    {
                        var brandName = System.IO.Path.GetFileNameWithoutExtension(item.BrandsImage).Replace("-", " ");

                        <a href="@item.BrandsImage">
                            <div class="brand-img-wrapper yunus">
                                <img src="@item.BrandsImage" alt="@brandName">
                                <span class="sr-only">@brandName markasına ait görsel</span>
                            </div>
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</section>
<style>
    /* Sabit yükseklik belirleyin. Örneğin: */
    .yunus {
        height: 100px; /* İstediğiniz sabit yüksekliği verin */
        width: auto; /* Genişlik isteğe bağlı */
        overflow: hidden; /* Taşan kısımların gizlenmesi */
        display: flex;
        align-items: center; /* Resmi dikeyde ortalamak için */
        justify-content: center; /* Resmi yatayda ortalamak için */
    }

        .yunus img {
            /* Resmin wrapper alanına uyum sağlaması için */
            width: auto;
            height: 100%;
            object-fit: contain; /* Resmin oranını bozmadan sığdırır */
            /* Eğer tamamen doldurmasını istiyorsanız, 'cover' kullanabilirsiniz */
        }

    .sr-only {
        position: absolute;
        width: 1px;
        height: 1px;
        padding: 0;
        margin: -1px;
        overflow: hidden;
        clip: rect(0, 0, 0, 0);
        border: 0;
        white-space: nowrap;
    }
</style>

