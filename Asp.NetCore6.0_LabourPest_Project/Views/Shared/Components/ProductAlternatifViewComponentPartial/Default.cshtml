@model List<Product>

<section id="product" class="ls s-pt-xl-140 s-pt-lg-120 s-pt-md-80 s-pt-50 s-pb-xl-140 s-pb-lg-120 s-pb-md-80 s-pb-50 text-center text-sm-left">
    <div class="container">
        <div class="row c-gutter-0">
            <div class="col-12">
                <h6 class="special-heading sub-title text-center"><span>KENDİ ÜRÜNLERİMİZ</span></h6>
                <h2 class="special-heading text-center">POPÜLER ÜRÜNLER</h2>
                <div class="divider-40 hidden-below-md"></div>
                <div class="divider-30 hidden-above-md"></div>
                <div class="product_tabs">
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="tab01_pane" role="tabpanel" aria-labelledby="tab01">
                            <div class="col-12 columns-3">
                                <ul class="products">
                                    @foreach (var item in Model)
                                    {
                                        <li class="product">
                                            <a class="woocommerce-LoopProduct-link" href="/Product/ProductDetail/@item.ProductID">
                                                <div class="product-image-container">
                                                    <img src="@item.ProductImageURL" alt="@item.ProductName">
                                                </div>
                                                <h2>@item.ProductName</h2>
                                                <div class="star-rating">
                                                    <span style="width:100%">Puan <strong class="rating">5</strong> 5/</span>
                                                </div>

                                                <div class="product-description">
                                                    <p class="desc-text"><strong></strong></p>
                                                </div>


                                                <span class="price">
                                                    <ins>
                                                        <span>
                                                            <span></span>@item.Category.CategoryName
                                                        </span>
                                                    </ins>
                                                </span>
                                            </a>
                                            <a rel="nofollow" href="/Product/ProductDetail/@item.ProductID" class=" button product_type_simple add_to_cart_button">Detaylar</a>
                                            <a href="/Product/ProductDetail/@item.ProductID" class="added_to_cart wc-forward" title="Detaylar">Detaylar</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<style>
    /* Görsel boyutlandırma */
    .product-image-container {
        width: 100%;
        height: 250px; /* İstediğiniz sabit yükseklik */
        overflow: hidden;
    }

        .product-image-container img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

    /* Ürün açıklaması kapsayıcısı */
    .product-description {
        /* Varsayılan akışın korunması için inline-block kullanılabilir */
        display: inline-block !important;
        white-space: normal !important; /* Normal boşluk davranışı */
    }

        /* Açıklama metni */
        .product-description .desc-text {
            display: inline !important; /* Tek satırda akması için inline */
            white-space: normal !important; /* Container genişliğine göre akar, ama
                                     varsa satır sonu karakterlerini yoksayar */
            word-break: normal !important; /* Kelimeleri ortadan bölmez */
            overflow-wrap: normal !important; /* Kelime kırılmalarını normal yapar */
            margin: 0 !important;
        }

        /* Eğer veride <br> etiketleri varsa, bunları görünmez yaparız */
        .product-description br {
            display: none !important;
        }

    a.add_to_cart_button {
        background-color: #55c2bb !important;
        border: none !important;
        outline: none !important;
        transition: background-color 0.3s ease;
    }

        a.add_to_cart_button:hover {
            background-color: #ebc912 !important;
        }


    a.add_to_cart_button {
        background-color: #55c2bb !important;
        transition: background-color 0.3s ease;
    }

        a.add_to_cart_button:hover {
            background-color: #ebc912 !important;
        }

</style>