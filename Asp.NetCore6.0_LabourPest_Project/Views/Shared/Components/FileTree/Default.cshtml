@model Asp.NetCore6._0_LabourPest_Project.Models.FileItemViewModel

<ul class="treeview">
    <li>
        @if (Model.IsDirectory)
        {
            <strong>@Model.Name</strong>
        }
        else
        {
            @Model.Name
        }
        @if (Model.Children.Any())
        {
            foreach (var child in Model.Children)
            {
                @await Html.PartialAsync("Components/FileTree/Default", child)
            }
        }
    </li>
</ul>
