@model List<WhoWeUs>

@foreach (var item in Model)
{
    @if (item.WhoWeUsClass == "s-cover-right")
    {
        <section id="about" class="ls ms s-pt-xl-140 s-pt-lg-120 s-pt-md-80 s-pt-50 s-pb-xl-145 s-pb-lg-125 s-pb-md-85 s-pb-55  text-center text-sm-left">
            <div class="cover-image @item.WhoWeUsClass">
                <img src="@item.WhoWeUsImageURL" alt="">
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6">
                        <div class="content-center">
                            <h2 class="special-heading sub-title"><span>@item.WhoWeUsTitle1</span></h2>
                            <h2 class="special-heading">@item.WhoWeUsTitle2</h2>
                            <div class="divider-45 hidden-below-md"></div>
                            <div class="divider-30 hidden-above-md"></div>
                            <p>
                                @item.WhoWeUsDescription1
                            </p>
                            <p>
                                @item.WhoWeUsDescription2
                            </p>
                            <div class="divider-50 hidden-below-md"></div>
                            <div class="divider-30 hidden-above-md"></div>
                            <a class="btn btn-maincolor medium-btn" href="#">Daha Fazla..</a>
                        </div>

                    </div>
                    <div class="col-lg-6"></div>
                </div>
            </div>
        </section>
    }
    else
    {
        <section class="ls ms s-pt-xl-140 s-pt-lg-120 s-pt-md-80 s-pt-50 s-pb-xl-145 s-pb-lg-125 s-pb-md-85 s-pb-55  text-center text-sm-left">
            <div class="cover-image s-cover-left">
                <img src="@item.WhoWeUsImageURL" alt="">
            </div>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-6"></div>
                    <div class="col-lg-6">
                        <div class="content-center">
                            <h1 class="special-heading sub-title"><span>@item.WhoWeUsTitle1</span></h1>
                            <h2 class="special-heading">@item.WhoWeUsTitle2</h2>
                            <div class="divider-45 hidden-below-md"></div>
                            <div class="divider-30 hidden-above-md"></div>
                            <p>
                                @item.WhoWeUsDescription1
                            </p>
                            <p>
                                @item.WhoWeUsDescription2
                            </p>
                            <div class="divider-50 hidden-below-md"></div>
                            <div class="divider-30 hidden-above-md"></div>
                            <a class="btn btn-maincolor medium-btn" href="#">Daha Fazla..</a>
                        </div>

                    </div>

                </div>
            </div>
        </section>

    }
}




