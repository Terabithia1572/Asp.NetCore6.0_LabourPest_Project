@model List<Category>
<section id="category" class="ls shop-categories-section s-pt-xl-135 s-pt-lg-115 s-pt-md-75 s-pt-55 s-pb-xl-145 s-pb-lg-125 s-pb-md-85 s-pb-55">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="special-heading text-center">İlaç Kategorileri</h2>
                <p class="special-heading text-center big">
                    Bitkilerden tıbbi kas kremlerine kadar yüzlerce ürün bulabilirsiniz
                </p>
                <div class="divider-60 hidden-below-md"></div>
                <div class="divider-40 hidden-above-md"></div>
                <div class="owl-carousel shop-categories-carousel" id="partners-carousel" data-center="false" data-margin="20" data-loop="true" data-autoplay="true" data-autoplay-timeout="2000" data-responsive-lg="3" data-responsive-md="2" data-responsive-sm="2" data-responsive-xs="1">
                    @foreach (var item in Model)
                    {
                        <article class="vertical-item text-center">
                            <div class="item-media post-thumbnail">
                                <a href="@item.CategoryImages">
                                    <img src="@item.CategoryImages" alt="img">
                                </a>
                            </div>
                            <div class="item-content">
                                <div class="cat-links">
                                    <a href="@item.CategoryImages" rel="category tag">
                                        @item.CategoryName
                                    </a>
                                </div>
                                <div class="description">
                                    <p>@item.CategoryDescription</p>
                                </div>
                            </div>
                        </article>
                    }
                   
                   
                </div>
            </div>
        </div>
    </div>
</section>

   